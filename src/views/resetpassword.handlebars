<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div id="requestResetSection">
        <h2 class="mb-4">Request Password Reset</h2>
        <form id="requestResetForm">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" required>
          </div>
          <button type="submit" class="btn btn-primary">Send Reset Link</button>
        </form>
      </div>

      <div id="resetPasswordSection" style="display: none;">
        <h2 class="mb-4">Reset Password</h2>
        <form id="resetForm">
          <div class="mb-3">
            <label for="password" class="form-label">New Password</label>
            <input type="password" class="form-control" id="password" required>
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm New Password</label>
            <input type="password" class="form-control" id="confirmPassword" required>
          </div>
          <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
      </div>

      <div id="message" class="mt-3"></div>
      <div id="spinner" class="spinner-border text-primary mt-3 d-none" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  </div>
</div>

<script src="/js/password-reset.js"></script>
