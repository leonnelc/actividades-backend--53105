{{#if loginSuccess}}
  <div class="d-flex justify-content-center mt-5">
    <h1 class="display-4 text-success">Logged in succesfully</h1>
  </div>
  <div class="d-flex justify-content-center mb-1">
    <h6 class="display-6 text-info">Redirecting to products in 3 seconds...</h6>
  </div>
  <script>
    setTimeout(function() { window.location.href = "products"; }, 3000); // 3
    seconds
  </script>
{{else}}
  {{#if loggedIn}}
    <div class="text-center mt-5">
      <h1 class="display-4 mb-4">Logged in as {{username}}</h1>
      <h2 class="display-6">Want to log out?
        <a href="logout" class="btn btn-danger">Click here</a></h2>
    </div>
  {{else}}
    <div class="d-flex justify-content-center">
      <form class="text-center" action="/api/sessions/login" method="post">
        <h1 class="display-1 mb-4">Sign in</h1>
        <!-- Email input -->
        <div class="form-floating mb-3">
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            placeholder="name@example.com"
            required
          />
          <label for="email">Email</label>
        </div>

        <!-- Password input -->
        <div class="form-floating mb-3">
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="password"
            required
          />
          <label for="password">Password</label>
        </div>
        {{#if errorMessage}}<p
            class="text-wrap text-danger"
          >{{errorMessage}}</p>{{/if}}

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

        <!-- Register button -->
        <div class="text-center">
          <p>Not a member? <a href="register">Register</a></p>
        </div>
        <div>
          <p class="mb-0">Or sign in with
          </p>
          <a href="/api/sessions/github" target="_self" class="btn"><i
              class="bi bi-github"
            ></i></a>
          <a href="/api/sessions/google" target="_self" class="btn"><i
              class="bi bi-google"
            ></i></a>
        </div>
      </form>
    </div>
  {{/if}}
{{/if}}