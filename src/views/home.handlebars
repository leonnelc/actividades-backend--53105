<h1>Products</h1>
    
<div id="product-container">
  {{#if products}}
    {{#each products}}
      <div class="product-card">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <span>{{this.price}}</span>
        <br>
        <span>Stock: {{this.stock}}</span>
        {{#each this.thumbnails}}
          <img src="{{this}}">
        {{/each}}
      </div>
    {{/each}}
  {{else}}
    <p>There are currently no products.</p>
  {{/if}}
</div>




